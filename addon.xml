<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.democracynow"
       version="3.0.0"
       name="Democracy Now!"
       provider-name="queeup">
    <requires>
        <import addon="xbmc.python"
                version="3.0.0"/>
        <import addon="script.module.requests"
                version="2.2.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Democracy Now! video add-on</summary>
        <description
                lang="en_GB">Democracy Now! is a syndicated program of news, analysis, and opinion aired by more than 700 radio and television, satellite and cable TV networks in North America. Democracy Now! serves as the flagship program for the Pacifica Radio network.
        </description>
        <language>en</language>
        <platform>all</platform>
        <license>WTFPL</license>
        <forum>https://forum.kodi.tv/showthread.php?tid=59931</forum>
        <website>https://www.democracynow.org</website>
        <source>https://github.com/queeup/plugin.video.democracynow</source>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
        <news>[B]v3.0.0[/B] (01/11/2020)
[new] Support kodi matrix
[new] python 3 migrate
        </news>
    </extension>
</addon>